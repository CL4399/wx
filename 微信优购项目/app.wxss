@import "./styles/iconfont.wxss";

/* 
    在微信小程序中不支持通配符
*/
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/* 
    主体颜色  通过变量来实现
        1  less 中 存在 变量这个知识
        2  原生的css和wxss中也支持
*/
page {
    /* 定义主体颜色*/
    --themeColor: #eb4450;
    /* 定义统一的字体大小  假设设计稿是  375px
        1px = 2rpx
        14px = 28rpx
    */
    font-size: 28rpx;
}
image{
    width: 100% ;
}